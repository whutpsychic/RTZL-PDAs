<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 获得焦点时的图片背景 -->
    <item android:state_focused="true"><shape>
            <gradient android:centerColor="#C6C6C6" android:endColor="#C6C6C6" android:startColor="#C6C6C6" />

            <stroke android:width="1px" android:color="#cccccc" />
        </shape></item>

    <!-- 触摸模式下单击时的背景图片 -->
    <item android:state_focused="false" android:state_pressed="true"><shape>
            <gradient android:centerColor="#C6C6C6" android:endColor="#C6C6C6" android:startColor="#C6C6C6" />

            <stroke android:width="1px" android:color="#cccccc" />
        </shape></item>
    <!-- 默认时的背景图片 <corners android:bottomRightRadius="4dp" /> -->
    <item><shape>
            <gradient android:centerColor="#FFFFFF" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />

            <stroke android:width="1px" android:color="#cccccc" />
        </shape></item>

</selector>